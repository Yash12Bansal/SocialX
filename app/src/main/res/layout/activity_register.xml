<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".RegisterActivity"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/curve2"
        android:layout_weight="0.1">

        <TextView
            android:background="@drawable/curve2"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:layout_weight="0.5"
            android:fontFamily="serif-monospace"
            android:textColor="@color/black"

            android:text="LOGIN"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"

            android:layout_height="match_parent"
            android:textSize="40sp"
            android:layout_weight="0.5"
            android:fontFamily="serif-monospace"
            android:textColor="@color/white"
            android:background="@drawable/curve"

            android:text="SIGN UP"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/curve4"

        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create an Account"
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="serif-monospace"
            android:textColor="@color/black"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:text="Name"

            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            ></TextView>

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="60dp"
            android:drawableEnd="@drawable/ic_baseline_person_24"

            android:inputType="textPersonName"
            android:hint="John Doe"
            />


        <TextView
            android:layout_marginLeft="60dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"

            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            ></TextView>
        <EditText

            android:layout_marginLeft="60dp"
            android:drawableEnd="@drawable/ic_baseline_email_24"

            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="johndoe@gmail.com"
            />
        <TextView
            android:layout_marginLeft="60dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            ></TextView>

        <EditText
            android:layout_marginLeft="60dp"
            android:drawableEnd="@drawable/ic_baseline_phone_24"

            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="9375383281"
            />

        <TextView
            android:layout_marginLeft="60dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            ></TextView>
        <EditText
            android:layout_marginLeft="60dp"
            android:drawableEnd="@drawable/ic_baseline_lock_24"

            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="************"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I agree with terms and conditions"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"

            ></TextView>


        <TextView
            android:id="@+id/sign_in_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            ></TextView>
    </LinearLayout>


    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="10dp"
        android:background="@drawable/curve3"></Button>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>